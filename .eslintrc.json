{
  "extends": ["airbnb", "next/core-web-vitals", "prettier"],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "import/no-anonymous-default-export": [
      "error",
      {
        "allowArrowFunction": true
      }
    ]
  }
}
